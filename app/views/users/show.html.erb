<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
  <article class="timeline">
    <h3>Sent Invitations:</h3>
    <ul class="posts">
      <% @pending.each do |invitation|%>
          <li><%= invitation.name %></li>
      <% end %>
    </ul>
  </article>
  <article class="timeline">
    <h3>Incoming Invitations:</h3>
    <ul class="posts">
      <% @incoming.each do |invitation|%>
          <li><%= invitation.name %> <%= link_to('Accept', invite_path(user_id: invitation.id), method: :put) %></li>
      <% end %>
    </ul>
  </article>
</section>
